<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Calculator" parent="Theme.MaterialComponents.DayNight.DarkActionBar">-->
                <!-- Primary brand color. -->
                <item name="colorPrimary">@color/purple_500</item>
                <item name="colorPrimaryVariant">@color/purple_700</item>
                <item name="colorOnPrimary">@color/white</item>
                <!-- Secondary brand color. -->
                <item name="colorSecondary">@color/teal_200</item>
                <item name="colorSecondaryVariant">@color/teal_700</item>
                <item name="colorOnSecondary">@color/black</item>
                <!-- Status bar color. -->
                <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
                <!-- Customize your theme here. -->
    </style>

    <style name="RadioButtonStyle">
        <item name="android:layout_height">@dimen/layout_width</item>
        <item name="android:textSize">@dimen/size_text</item>
        <item name="android:backgroundTint">#4D817F</item>
        <item name="android:textColor">@android:color/background_dark</item>
        <item name="android:layout_margin">@dimen/marginTop</item>
    </style>

    <!-- NumberButtonStyle for keys "1, 2, 3, 4, 5, 6, 7, 8, 9, 0". -->
    <style name="ButtonBaseStyle">
        <item name="android:layout_height">@dimen/layout_width</item>
        <item name="android:textSize">@dimen/size_text</item>
        <item name="android:backgroundTint">#4D817F</item>
        <item name="android:textColor">@android:color/background_dark</item>
        <item name="android:layout_margin">@dimen/marginTop</item>
    </style>

    <!-- NumberActionButton2 for keys "*", "-", "+". -->
    <style name="OperationStyle">
        <item name="android:layout_height">@dimen/layout_width</item>
        <item name="android:textSize">@dimen/size_text</item>
        <item name="android:backgroundTint">#1F4240</item>
        <item name="android:textColor">#715A5A</item>
        <item name="android:layout_margin">@dimen/marginTop</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:layout_height">@dimen/layout_width</item>
        <item name="android:backgroundTint">#1F4240</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:hint">@string/result</item>

    </style>

</resources>